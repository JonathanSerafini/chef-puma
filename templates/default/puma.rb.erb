#!/usr/bin/env puma

directory "<%= @working_dir %>"

<%= @app if @app %>

<%- if @rackup %>
rackup "<%= @rackup %>"
<%- end %>

<%- if @preload_app %>
preload_app!
<%- end %>

<%- if @prune_bundler %>
prune_bundler
<%- end %>

environment "<%= @environment %>"
daemonize <%= @daemonize %>
pidfile  "<%= @pidfile %>"
state_path "<%= @statepath %>"
stdout_redirect '<%= @stdout_redirect %>', '<%= @stderr_redirect %>', <%= @output_append %>
<%- if @quiet %>
quiet
<%- end %>
threads <%= @thread_min %>, <%= @thread_max %>
bind "<%= @bind %>"
workers <%= @workers %>

<%- if @on_worker_boot %>
on_worker_boot do
  <%= @on_worker_boot %>
end
<%- end %>

<%- if @activate_control_app %>
activate_control_app "<%= @control_app_bind %>"
<%- end %>
